{
    "name": "kyanag/form",
    "description": "Form",
    "type": "library",
    "authors": [
        {
            "name": "kyanag",
            "email": "gongzuo_yk@foxmail.com"
        }
    ],
    "require": {
        "league/plates": "^3.4"
    },
    "require-dev":{
        "phpunit/phpunit": "^6.5",
        "squizlabs/php_codesniffer": "*",
        "composer-runtime-api": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Kyanag\\Form\\": "src/"
        },
        "files": [
            "./src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Kyanag\\Form\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "code-format": "phpcbf --standard=PSR2 ./src ",
        "test": "phpunit"
    }
}
